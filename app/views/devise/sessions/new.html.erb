<section class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-4">
				<div class="box has-text-centered">
					<h2 class="title is-2">Log in</h2>
					<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: {label: false}) do |f| %>
	
					  <div class="field">
					  	<div class="control has-icons-left">
					  		<%= f.input :email, required: false, autofocus: true, input_html: { class: "input", placeholder: "Email" }, wrapper: false %>
					    	<%#= f.input :email, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
					    	<span class="icon is-small is-left">
						      <i class="fas fa-envelope"></i>
						    </span>
					    </div>
					  </div>
	
					  <div class="field">
					  	<div class="control has-icons-left">
					  		<%= f.input :password, required: false, input_html: { class: "input", placeholder: "Password" }, wrapper: false %>
					    	<%#= f.input :password, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
					    	<span class="icon is-small is-left">
						      <i class="fas fa-lock"></i>
						    </span>
							</div>
						</div>
	
						<div class="field">
					  	<div class="control">
					    	<%= f.input :remember_me, wrapper: false, as: :boolean, label: "Remember me?" if devise_mapping.rememberable? %>
					  	</div>
						</div>
	
					  <%= f.button :submit, "Log in", class:"button is-primary is-medium" %>
					<% end %>
					<br/>
					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>
	</div>
</section>